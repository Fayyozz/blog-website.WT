extends layout.pug 

block content 
    #all-blogs 
        h1.display-5 All blogs 
        each blog in blogs 
            .blog-wrapper 
                .blog-t-b
                    a.blog.title(href=`/blogs/${blog.id}`)= blog.title
                    a.blog.body= blog.blogBody
                .buttons
                    a.btn.btn-primary.btn-sm#btn-open(href=`/blogs/${blog.id}`) Read
                    a.delete.btn.btn-outline-danger.btn-sm(href=`/${blog.id}/delete`) Delete
        


